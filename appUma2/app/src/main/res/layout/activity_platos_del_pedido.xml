<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".platosdelPedido">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear Pedido" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextNumPedido"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="NUM PEDIDO"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/buttonCargar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Cargar" />
    </LinearLayout>

    <ListView
        android:id="@+id/listaPlatos"
        android:layout_width="match_parent"
        android:layout_height="292dp">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/platoSel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ems="10"
            android:hint="Plato"
            android:inputType="textPersonName" />

        <Spinner
            android:id="@+id/cantidad"
            android:layout_width="match_parent"
            android:layout_height="74dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/editTextObservacion"
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:ems="10"
        android:hint="Observacion"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnAgregarPlato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AgregarPlato" />

</LinearLayout>